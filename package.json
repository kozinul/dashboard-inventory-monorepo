{
  "name": "dashboard-inventory",
  "version": "1.0.0",
  "private": true,
  "description": "Dashboard Inventory - Monorepo for fullstack application",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel -r run dev",
    "dev:frontend": "pnpm --filter @dashboard/frontend run dev",
    "dev:backend": "pnpm --filter @dashboard/backend run dev",
    "build": "pnpm --filter @dashboard/frontend run build",
    "lint": "pnpm -r run lint",
    "clean": "rimraf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "dashboard",
    "inventory",
    "monorepo",
    "react",
    "typescript"
  ],
  "license": "MIT",
  "dependencies": {
    "vite": "^7.3.1"
  }
}